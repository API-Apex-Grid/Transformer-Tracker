datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Transformer {
  id                 String   @id @default(cuid())
  region             String
  transformerNumber  String
  poleNumber         String
  type               String
  location           String
  sunnyImage         String?
  cloudyImage        String?
  windyImage         String?

  @@unique([transformerNumber, poleNumber])
}

model Inspection {
  id                String   @id @default(cuid())
  transformerNumber String
  inspectionNumber  String   @unique
  inspectedDate     String
  maintainanceDate  String
  branch            String
  status            String
  imageUrl          String?
  weather           String?
}
